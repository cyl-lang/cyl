{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["ES2020"],
    "module": "node16",
    "declaration": true,
    "outDir": "compiler/dist",
    "rootDir": "./design",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "moduleResolution": "nodenext",
    "isolatedModules": true,
    "emitDeclarationOnly": false
  },
  "include": ["design/src/**/*", "design/tests/**/*"],
  "exclude": ["node_modules", "compiler/dist", "compiler"]
}
