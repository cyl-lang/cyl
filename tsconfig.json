{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "module": "node16",
    "declaration": true,
    "outDir": "./design/dist",
    "rootDir": "./design/src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "moduleResolution": "nodenext",
    "isolatedModules": true,
    "emitDeclarationOnly": false,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["design/src/*"]
    }
  },
  "include": ["design/src/**/*"],
  "exclude": ["node_modules", "compiler/dist", "compiler"]
}
