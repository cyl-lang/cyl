{
    "name": "cyl-lang",
    "version": "0.1.1",
    "description": "Cyl programming language with Rust compiler backend and TypeScript design tools",
    "main": "design/src/index.ts",
    "type": "module",
    "scripts": {
        "build": "npm run build:design && npm run build:compiler",
        "build:design": "tsc",
        "build:compiler": "cd compiler && cargo build --release",
        "dev": "npm run build:design && node dist/index.js",
        "test": "npm run test:design && npm run test:compiler",
        "test:design": "node --experimental-vm-modules node_modules/.bin/jest",
        "test:design:watch": "node --experimental-vm-modules node_modules/.bin/jest --watch",
        "test:design:coverage": "node --experimental-vm-modules node_modules/.bin/jest --coverage",
        "test:compiler": "cd compiler && cargo test",
        "test:compiler:cyl": "cd compiler && cargo run -- test",
        "grammar:validate": "node dist/src/tools/grammar-validator.js",
        "ast:generate": "ts-node --esm design/src/tools/ast-generator.ts",
        "syntax:check": "ts-node --esm design/src/tools/syntax-checker.ts",
        "compiler:dev": "cd compiler && cargo run",
        "compiler:install": "cd compiler && cargo install --path .",
        "setup": "npm install && cd compiler && cargo build"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.28.0",
        "@babel/preset-typescript": "^7.27.1",
        "@types/jest": "^30.0.0",
        "@types/node": "^24.0.10",
        "babel-jest": "^30.0.4",
        "jest": "^30.0.4",
        "ts-jest": "^29.4.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.3",
        "yaml": "^2.8.0"
    },
    "dependencies": {
        "chalk": "^5.4.1"
    },
    "keywords": [
        "programming-language",
        "compiler",
        "systems-programming",
        "language-design",
        "rust",
        "typescript",
        "native-compilation"
    ],
    "author": {
        "name": "MJ Anglin",
        "email": "contact@mjanglin.com",
        "url": "https://www.mjanglin.com"
    },
    "license": "MIT",
    "engines": {
        "node": ">=22.0.0"
    }
}