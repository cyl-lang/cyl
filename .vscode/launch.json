{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug Cyl Compiler",
      "program": "${workspaceFolder}/target/debug/cylc",
      "args": ["${input:command}", "${input:inputFile}"],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "build"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug Cyl Test",
      "program": "${workspaceFolder}/target/debug/cylc",
      "args": ["test"],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "build"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug Cyl Check File",
      "program": "${workspaceFolder}/target/debug/cylc",
      "args": ["check", "${input:cylFile}"],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "build"
    }
  ],
  "inputs": [
    {
      "type": "pickString",
      "id": "command",
      "description": "Select command to debug",
      "options": ["check", "ast", "test", "run"]
    },
    {
      "type": "promptString",
      "id": "inputFile",
      "description": "Enter the .cyl file to process (or leave empty for test command)"
    },
    {
      "type": "promptString",
      "id": "cylFile",
      "description": "Enter the .cyl file path to check",
      "default": "examples/hello_world.cyl"
    }
  ]
}
