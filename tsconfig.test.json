{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "rootDir": "./design",
    "types": ["node", "jest"],
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["design/src/*"]
    }
  },
  "include": ["design/tests/**/*"],
  "exclude": ["node_modules", "design/dist", "compiler/dist", "compiler"]
}
